<div class="container-fluid bg-1 text-center">
  <div class="row">
      <div class="col-lg-3">
          <div id=""
      </div>
  </div>
</div>


<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Add your dog here!</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add your dog!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="dogName">Name</label>
            <input type="text" class="form-control" id="inputDogName" placeholder="Buddy">
          </div>
          <div class="form-group">
            <label for="dogName">Breed</label>
            <input type="text" class="form-control" id="inputDogBreed" placeholder="Labrador">
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Size</label>
            <select class="form-control" id="inputDogSize">
              <option>Small (1-10 lbs)</option>
              <option>Medium (11-30 lbs)</option>
              <option>Large (>=31 lbs)</option>
            </select>
          </div>
          <div class="form-group">
            <label for="dogName">Picture</label>
            <input type="text" class="form-control" id="inputDogPic" placeholder="link to picture">
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Personality</label>
            <select class="form-control" id="inputDogPersonality">
              <option>Calm</option>
              <option>Energetic</option>
              <option>Insane</option>
              <option>Weird</option>
            </select>
          </div>
          <div class="form-group">
            <label for="exampleFormControlSelect1">Age</label>
            <select class="form-control" id="inputDogAge">
              <option>0-3</option>
              <option>4-9</option>
              <option>>=10</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Add Dog!</button>
      </div>
    </div>
  </div>
</div>